{
  "name": "payroll-backend",
  "version": "1.0.0",
  "description": "Backend microservices for payroll system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:gateway": "ts-node-dev --respawn --transpile-only src/gateway/index.ts",
    "dev:auth": "ts-node-dev --respawn --transpile-only src/services/auth/index.ts",
    "dev:company": "ts-node-dev --respawn --transpile-only src/services/company/index.ts",
    "dev:employee": "ts-node-dev --respawn --transpile-only src/services/employee/index.ts",
    "build": "tsc"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.6.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^8.2.2"
  }
}
